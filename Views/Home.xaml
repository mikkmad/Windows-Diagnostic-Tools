<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Windows_Diagnostic_Tools_rewrite.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Welcome to Windows Diagnostic Tools" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Automated system repair and optimization utilities" 
                           FontSize="14" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Margin="0,0,0,20"/>

                <Border Height="1" 
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" 
                        Margin="0,0,0,20"/>

                <TextBlock Text="This application provides a suite of diagnostic and repair tools to help maintain your Windows system. Each tool runs administrative commands to diagnose and fix common issues." 
                           FontSize="14" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Available Tools Section -->
                <TextBlock Text="Available Tools:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,12"/>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="• Network &amp; DNS Reset" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"/>
                    <TextBlock Text="Resets network adapters and clears DNS cache to resolve connectivity issues." 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="12,0,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="• Windows System Repair" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"/>
                    <TextBlock Text="Scans and repairs corrupted system files using the System File Checker and DISM tools." 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="12,0,0,12"/>
                </StackPanel>

                <!-- Admin Warning (only shown if not running as admin) -->
                <InfoBar x:Name="AdminWarningInfoBar"
                         Title="Administrator Privileges Required" 
                         Message="This application requires administrator privileges to run. Please restart the application with administrator rights to use these tools." 
                         Severity="Warning" 
                         Margin="0,0,0,20"
                         IsOpen="True"
                         IsClosable="False"/>

                <!-- Disclaimer -->
                <TextBlock Text="Disclaimer" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,8"/>

                <TextBlock Text="These tools modify system files and settings. Use them at your own risk. We recommend creating a system restore point or backup before running these utilities. While these tools are designed to help resolve common Windows issues, they may not be suitable for all systems. If you are unsure about running any of these tools, consult with a system administrator or IT professional." 
                           FontSize="12" 
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Found an issue?" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <HyperlinkButton NavigateUri="https://github.com/mikkmad/Windows-Diagnostic-Tools" 
                                 Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Image x:Name="GitHubLogo"
                               Width="20" 
                               Height="20"/>
                        <TextBlock Text="File an Issue here!" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </HyperlinkButton>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>