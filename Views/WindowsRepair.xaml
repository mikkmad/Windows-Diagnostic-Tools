<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Windows_Diagnostic_Tools_rewrite.Views.WindowsRepair"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- header -->
                <TextBlock Text="Windows System Image Repair" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Repair corrupted system files and restore Windows integrity" 
                           FontSize="14" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                           Margin="0,0,0,20"/>

                <Border Height="1" 
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" 
                        Margin="0,0,0,20"/>

                <!-- description of commands -->
                <TextBlock Text="What will be run:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="1. System File Checker" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"/>

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="4" 
                            Padding="8" 
                            Margin="0,0,0,8">

                        <TextBlock Text="sfc /scannow" 
                                   FontFamily="Consolas" 
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </Border>

                    <TextBlock Text="Scans and repairs corrupted system files. This is the first step in restoring Windows system integrity." 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">

                    <TextBlock Text="2. DISM Cleanup-Image" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"/>

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="4" 
                            Padding="8" 
                            Margin="0,0,0,8">

                        <TextBlock Text="DISM /Online /Cleanup-Image /RestoreHealth" 
                                   FontFamily="Consolas" 
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </Border>

                    <TextBlock Text="Repairs the Windows image and restores system components. This runs after SFC to ensure complete system restoration." 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <InfoBar Title="Note" 
                         Message="Both commands may take several minutes to complete. Do not close this application during the repair process." 
                         Severity="Warning" 
                         Margin="0,0,0,20"
                         IsOpen="True"
                         IsClosable="False"/>

                <Button Content="Run Repair" 
                        Click="RunCommand_Click" 
                        Margin="0,0,0,10"/>

                <!-- terminal output -->
                <TextBlock Text="Console Output:" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="0,10,0,8"/>

                <Border Background="#1E1E1E" 
                        CornerRadius="4" 
                        Padding="12"
                        BorderThickness="1"
                        BorderBrush="#3E3E42"
                        Height="200">

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">

                        <RichTextBlock x:Name="OutputRichTextBlock" 
                                       FontFamily="Consolas" 
                                       FontSize="12" 
                                       Foreground="#00FF00"
                                       TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>