<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Windows_Diagnostic_Tools_rewrite.Views.NetworkRepair"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- header -->
                <TextBlock Text="Network Driver and DNS Reset" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Reset network adapters and DNS settings to restore connectivity" 
                           FontSize="14" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                           Margin="0,0,0,20"/>

                <Border Height="1" 
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" 
                        Margin="0,0,0,20"/>

                <!-- description of commands -->
                <TextBlock Text="What will be run:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="1. Network Reset" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"/>

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="4" 
                            Padding="8" 
                            Margin="0,0,0,8">

                        <TextBlock Text="ipconfig /flushdns, /release, /renew, /registerdns &amp;&amp; netsh winsock reset" 
                                   FontFamily="Consolas" 
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </Border>

                    <TextBlock Text="Releases and renews DHCP leases to reset network adapter configurations and attempts restore IP connectivity." 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">

                    <TextBlock Text="2. DNS Cache Clear" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"/>

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="4" 
                            Padding="8" 
                            Margin="0,0,0,8">

                        <TextBlock Text="ipconfig /flushdns" 
                                   FontFamily="Consolas" 
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </Border>

                    <TextBlock Text="Clears the DNS resolver cache to resolve domain name resolution issues and fix potential network performance issues." 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <InfoBar Title="Note" 
                         Message="Your internet connection may briefly disconnect during the reset process." 
                         Severity="Warning" 
                         Margin="0,0,0,20"
                         IsOpen="True"
                         IsClosable="False"/>

                <Button Content="Run Reset" 
                        Click="RunCommand_Click" 
                        Margin="0,0,0,10"/>

                <!-- terminal output -->
                <TextBlock Text="Console Output:" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="0,10,0,8"/>

                <Border Background="#1E1E1E" 
                        CornerRadius="4" 
                        Padding="12"
                        BorderThickness="1"
                        BorderBrush="#3E3E42"
                        Height="200">

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">

                        <RichTextBlock x:Name="OutputRichTextBlock" 
                                       FontFamily="Consolas" 
                                       FontSize="12" 
                                       Foreground="#00FF00"
                                       TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>